<% include partial/header %>

	<div class="container">
		 <header class="jumbotron">
			<div class="container">
				<h1>Welcome To Campground!</h1>
				<p>view our hand-picked campgrounds all over the world</p>
				<p>
				   <a class="btn btn-primary btn-large" href="/campground/new">Add new campground</a>
				</p>
			</div>
		 </header>
			
			<div class="row">
				<% campground.forEach(function(campground){ %>
					<div class= "col-md-3 col-sm-6">
						<div class= "img-thumbnail text-center">
							<img style="width: 100%" src="<%= campground.image %>" >  
							<div class="caption">
								<h4><%= campground.name %></h4>
							</div>
						</div>	
					</div>
				<% }); %>
			</div>
			
	</div>

<% include partial/footer %> 
